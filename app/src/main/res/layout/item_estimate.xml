<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rounded_corner"
    android:layout_margin="8dp">

    <!-- 1️⃣ 서비스명 + 지역명 + 아이콘 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="4dp">

        <ImageView
            android:id="@+id/ivCategoryIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_placeholder"
            android:layout_marginEnd="6dp"/>

        <TextView
            android:id="@+id/tvCategoryAndRegion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="홈 청소 | 서울 강남구"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvDirectBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="직접"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_direct_badge"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:layout_marginStart="6dp"
            android:visibility="gone"/> <!-- 기본은 숨김 -->

    </LinearLayout>

    <!-- 2️⃣ 남은 시간 + 받은 견적 수 -->
    <TextView
        android:id="@+id/tvEstimateInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="남은 시간 23:45 | 받은 견적 2건"
        android:textSize="14sp"
        android:layout_marginBottom="2dp"/>

    <!-- 3️⃣ 상태 표시 (요청중 / 응답완료 / 만료) -->
    <TextView
        android:id="@+id/tvEstimateStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="요청중"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark"/>
</LinearLayout>
